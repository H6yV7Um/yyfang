<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingEnd="10dp"
    android:paddingStart="10dp">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/tv_video_title"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_13"
            tools:text="置业顾问带你去看房啦,你还在等什么呢？尽快给他人看个人头看过你天然健康给你听进入可能人家可能发个软件可" />


        <ImageView
            android:id="@+id/video_front_cover"
            android:layout_width="match_parent"
            android:layout_height="187dp"
            android:layout_marginTop="40dp"
            android:scaleType="centerCrop"
            tools:src="@drawable/icon_man" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="48dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/hot_location_bg"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_10"
                tools:text="东戴河" />

            <TextView
                android:id="@+id/tv_building"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:background="@drawable/hot_location_bg"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_10"
                tools:text="MOMA白金海" />

            <TextView
                android:id="@+id/tv_avg_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:background="@drawable/avg_price_bg"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_10"
                tools:text="18500元/平" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_play_times"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|start"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="10dp"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_10"
            tools:text="12569次播放" />
    </FrameLayout>

    <include layout="@layout/layout_video_about_info" />

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/colorPrimaryBg"
        />

</LinearLayout>
