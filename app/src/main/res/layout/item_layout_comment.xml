<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cl_f8f8f8"
    android:paddingBottom="12dp"
    android:paddingEnd="10dp"
    android:paddingStart="10dp"
    android:paddingTop="12dp">


    <ImageView
        android:id="@+id/iv_headpic"
        android:layout_width="39dp"
        android:layout_height="39dp"
        android:src="@drawable/icon_man" />

    <LinearLayout
        android:id="@+id/ll_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@id/iv_headpic"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/cl_888888"
            android:textSize="@dimen/font_size_13"
            tools:text="泪牛满面" />

        <TextView
            android:id="@+id/tv_comment_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/cl_b2b2b2"
            android:textSize="@dimen/font_size_11"
            android:text="38分钟前" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_comment_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_below="@id/iv_headpic"
        android:layout_alignStart="@id/ll_name"
        android:lineSpacingMultiplier="1.2"
        android:textColor="@color/cl_333333"
        android:textSize="@dimen/font_size_12"
        tools:text="借口接口好男人尽快发给人家看过他居然人家过年天然健康让客入开发健康减肥拉开就看见了会计法，是让你飞哦i人家看尽快呢看你们，人愤怒烤牛肉看见你。"
        />

    <TextView
        android:id="@+id/tv_comment_total"
        android:layout_width="match_parent"
        android:layout_height="29dp"
        android:layout_below="@id/tv_comment_content"
        android:layout_alignStart="@id/ll_name"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp"
        android:textColor="@color/cl_6f6fa3"
        android:textSize="@dimen/font_size_10"
        tools:text="查看全部10条回复"
        android:background="@drawable/shape_reply_all"
        />

    <View
        android:id="@+id/v_divider"
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:layout_below="@id/tv_comment_total"
        android:layout_alignStart="@id/ll_name"
        android:layout_marginTop="10dp"
        android:background="@color/colorLine"
        />

</RelativeLayout>
