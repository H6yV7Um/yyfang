<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/cl_f8f8f8"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="20dp"
        android:paddingBottom="17dp"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_shareboard_wx_friend"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:drawableTop="@drawable/ic_shareboard_wx_friend"
            android:drawablePadding="13dp"
            android:gravity="center"
            android:textSize="@dimen/font_size_12"
            android:textColor="@color/cl_333333"
            android:text="@string/wx_friend"
            />

        <TextView
            android:id="@+id/tv_shareboard_wx_center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:drawableTop="@drawable/ic_shareboard_wx_circle"
            android:drawablePadding="13dp"
            android:gravity="center"
            android:textSize="@dimen/font_size_12"
            android:textColor="@color/cl_333333"
            android:text="@string/wx_center"
            />

        <TextView
            android:id="@+id/tv_shareboard_delete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:drawableTop="@drawable/ic_play_delete"
            android:drawablePadding="13dp"
            android:gravity="center"
            android:textSize="@dimen/font_size_12"
            android:textColor="@color/cl_333333"
            android:text="@string/delete"
            android:visibility="gone"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/colorLine"
        />

    <TextView
        android:id="@+id/tv_share_withothers_cancel"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:gravity="center"
        android:textSize="@dimen/font_size_15"
        android:textColor="@color/cl_333333"
        android:text="@string/cancel"
        android:background="@color/white"
        />

</LinearLayout>