<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="7dp"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingEnd="10dp"
    android:paddingStart="10dp">

    <TextView
        android:id="@+id/tv_building_star"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:drawableEnd="@drawable/icon_go"
        android:drawablePadding="6dp"
        android:drawableStart="@drawable/shape_vertical_line"
        android:gravity="left|center_vertical"
        android:text="@string/building_star"
        android:textColor="@color/cl_333333"
        android:textSize="@dimen/font_size_13" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorLine" />


    <RelativeLayout
        android:id="@+id/rl_building_star"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:src="@drawable/loading" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_avatar"
            android:layout_marginLeft="10dp"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/ic_certification"
            android:text="不拿拿"
            android:textColor="@color/cl_333333"
            android:textSize="@dimen/font_size_12" />

        <TextView
            android:id="@+id/tv_counselor_attention"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/tv_ask"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_follow_authuser_bg"
            android:text="+关注TA"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_10" />

        <TextView
            android:id="@+id/tv_ask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/shape_inquiry_authuser_bg"
            android:text="私信咨询"
            android:layout_marginRight="10dp"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_10" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorLine" />

    <LinearLayout
        android:id="@+id/ll_building_star"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TA为本楼贡献："
            android:textColor="@color/cl_333333"
            android:textSize="@dimen/font_size_10" />

        <LinearLayout
            android:id="@+id/ll_star_tag"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"></LinearLayout>
        <!-- <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/shape_black_stroke_bg"
            android:text="10个视频"
            android:textColor="@color/cl_333333"
            android:textSize="@dimen/font_size_10" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/shape_black_stroke_bg"
            android:text="一次直播"
            android:textColor="@color/cl_333333"
            android:textSize="@dimen/font_size_10" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/shape_black_stroke_bg"
            android:text="一个回复"
            android:textColor="@color/cl_333333"
            android:textSize="@dimen/font_size_10" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/shape_red_stroke_bg"
            android:text="0次被举报"
            android:textColor="@color/cl_fc2a35"
            android:textSize="@dimen/font_size_10" />-->
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorLine" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/icon_ask"
        android:drawablePadding="6dp"
        android:gravity="center"
        android:text="@string/ask_here"
        android:textColor="@color/cl_069bc0"
        android:textSize="@dimen/font_size_12" />
</LinearLayout>

