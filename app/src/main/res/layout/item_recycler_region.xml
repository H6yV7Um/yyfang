<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">

    <ImageView
        android:id="@+id/iv_building"
        android:layout_width="103dp"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:src="@drawable/loading"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_area_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="MOMA-白金海"
                android:textColor="@color/cl_406599"
                android:textSize="@dimen/font_size_14" />

            <TextView
                android:id="@+id/tv_price_range"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12000-18000"
                android:textColor="@color/cl_ec6858"
                android:textSize="@dimen/font_size_14" />

            <TextView
                android:id="@+id/tv_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元/平"
                android:textColor="@color/cl_ec6858"
                android:textSize="@dimen/font_size_11" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/icon_location"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="距离北京300km"
            android:textColor="@color/cl_333333"
            android:textSize="@dimen/font_size_12" />

        <LinearLayout
            android:id="@+id/ll_building_tag"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <!-- <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="住宅"
                 android:textColor="@color/cl_f86b4a"
                 android:textSize="@dimen/font_size_9"
                 android:background="@drawable/shape_label1"
                 />-->

            <!--    <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:text="五证齐全"
                    android:textColor="@color/cl_1ccec8"
                    android:textSize="@dimen/font_size_9"
                    android:background="@drawable/shape_label2"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:text="车位充足"
                    android:textColor="@color/cl_53c3ed"
                    android:textSize="@dimen/font_size_9"
                    android:background="@drawable/shape_label3"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:text="花园洋房"
                    android:textColor="@color/cl_ffa50f"
                    android:textSize="@dimen/font_size_9"
                    android:background="@drawable/shape_label4"/>-->
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/tv_amount_building"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="楼盘：12"
                android:textColor="@color/cl_999999"
                android:textSize="@dimen/font_size_10" />

            <TextView
                android:id="@+id/tv_amount_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:text="视频：09"
                android:textColor="@color/cl_999999"
                android:textSize="@dimen/font_size_10" />

            <TextView
                android:id="@+id/tv_amount_live"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:text="直播：23"
                android:textColor="@color/cl_999999"
                android:textSize="@dimen/font_size_10" />


        </LinearLayout>
    </LinearLayout>
</LinearLayout>
