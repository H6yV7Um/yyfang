<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_headpic"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/loading" />

        <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="宋小宝"
            android:textColor="@color/cl_406599"
            android:textSize="@dimen/font_size_12" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="50万预算  倾向环京楼盘"
            android:textSize="@dimen/font_size_10" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_talk_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="20dp"
        android:text="小区环境对于居住体验来说十分重要，俗话说：千金买房，万金买邻。"
        android:textColor="@color/cl_333333"
        android:textSize="@dimen/font_size_12" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="12dp">


        <TextView
            android:id="@+id/tv_talk_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="9分钟前"
            android:textColor="@color/cl_999999"
            android:textSize="@dimen/font_size_10" />

        <TextView
            android:id="@+id/tv_talk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/talk_img"
            android:drawablePadding="5dp"
            android:text="评论"
            android:textColor="@color/cl_406599"
            android:textSize="@dimen/font_size_10" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_reply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/ic_comment_reply"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="48dp"
        android:paddingLeft="8dp"
        android:paddingTop="12dp"
        android:layout_marginRight="10dp">

    </LinearLayout>
</LinearLayout>
