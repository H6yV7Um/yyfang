<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@drawable/shape_check_update_bg"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/ic_check_update_top_bg"
        tools:ignore = "contentDescription"
        />

    <TextView
        android:id="@+id/tv_version_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:gravity="end"
        tools:text="V1.1.3"
        android:textSize="@dimen/font_size_11"
        android:textColor="@color/cl_d2d2d2"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/find_new_version"
        android:textSize="@dimen/font_size_16"
        android:textColor="@color/cl_333333"
        />

    <TextView
        android:id="@+id/tv_update_description"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0"
        android:lineSpacingMultiplier="1.3"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_marginTop="25dp"
        android:textColor="@color/cl_616161"
        android:textSize="@dimen/font_size_13"
        tools:text="1：诶符合乳房和软件开发呵呵乳房二姐夫呢软件开发红呢人家看乳房二级开发内容\n 2：德维尔复健科人孔盖瑞泰科\n 3：光和热光和热个人健康\n 4：份儿饭二分二客户个人健康后该接口个人给他人\n "
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="17dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/btn_update_later"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_weight="1.0"
            android:text="@string/update_later"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_14"
            android:background="@drawable/shape_update_later_bg"
            />

        <Button
            android:id="@+id/btn_update_now"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_marginStart="20dp"
            android:layout_weight="1.0"
            android:text="@string/update_now"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_14"
            android:background="@drawable/shape_update_now_bg"
            />
    </LinearLayout>

</LinearLayout>
