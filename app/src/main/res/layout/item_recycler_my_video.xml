<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="@color/white">

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginBottom="12dp"
        android:background="@color/colorLine" />

    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="119dp"
        android:layout_height="67dp"
        android:layout_below="@id/line"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/loading"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/tv_video_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/pusher_info_background"
        android:paddingEnd="5dp"
        android:paddingStart="5dp"
        android:text="08:23"
        android:textSize="@dimen/font_size_9"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/line"
        android:layout_marginLeft="140dp"
        android:layout_marginRight="10dp"
        android:text="美女职业顾问，带你看北京总价最低的地铁楼盘!"
        android:textColor="@color/cl_333333"
        android:textSize="@dimen/font_size_11" />


    <TextView
        android:id="@+id/video_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="19dp"
        android:padding="6dp"
        android:text="已发布"
        android:textColor="@color/cl_999999"
        android:textSize="@dimen/font_size_10" />
    <View

        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginBottom="12dp"
        android:layout_below="@id/iv_img"
        android:background="@color/colorLine" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="27dp"
        android:gravity="center_vertical"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/tv_watch_count"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="观看1324"
            android:textColor="@color/cl_666666"
            android:textSize="@dimen/font_size_10" />
        <View

            android:layout_width="0.5dp"
            android:layout_height="10dp"
            android:background="@color/colorLine" />
        <TextView
            android:id="@+id/favorite_count"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="收藏1324"
            android:textColor="@color/cl_666666"
            android:textSize="@dimen/font_size_10" />
        <View

            android:layout_width="0.5dp"
            android:layout_height="10dp"
            android:background="@color/colorLine" />
        <TextView
            android:id="@+id/talk_count"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="评论1324"
            android:textColor="@color/cl_666666"
            android:textSize="@dimen/font_size_10" />

    </LinearLayout>
    <View

        android:layout_width="match_parent"
        android:layout_height="0.5dp"
       android:layout_alignParentBottom="true"
        android:background="@color/colorLine" />
</RelativeLayout>


