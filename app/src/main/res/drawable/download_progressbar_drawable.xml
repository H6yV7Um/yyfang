<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:id="@android:id/background">  
        <shape>  
            <corners android:radius="5dp" />
            <gradient android:startColor="@color/cl_cccccc"
                android:centerColor="@color/cl_cccccc"
                android:endColor="@color/cl_cccccc"
                android:angle="270.0"
                android:centerY="1.0"  />
        </shape>  
    </item>
    
    <item android:id="@android:id/progress">
        <clip>  
            <shape>  
                <corners android:radius="5dp" />
                <gradient android:startColor="@color/cl_00bceb"
                    android:centerColor="@color/cl_00bceb"
                    android:endColor="@color/cl_00bceb"
                    android:angle="270.0"
                    android:centerY="1.0"  />
            </shape>  
        </clip>  
    </item>

</layer-list>
